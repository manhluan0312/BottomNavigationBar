<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher_background"
        />

        <EditText
            android:id="@+id/edt_loginemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="15dp"
            android:background="@drawable/custum_edittext"
            android:hint="Nhập tên email ..."
            android:inputType="textPersonName"
            android:textColor="@color/black"></EditText>


        <EditText
            android:id="@+id/edt_loginpass"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_pass"
            android:drawablePadding="15dp"
            android:background="@drawable/custum_edittext"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:hint="Nhập mật khẩu ..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

    <CheckBox
        android:id="@+id/nhomatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhớ mật khẩu"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        />
    <Button
        android:id="@+id/btn_dangnhap"
        android:textColor="@color/white"
        android:text="ĐĂNG NHẬP"
        android:background="@drawable/custumbutton_login"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/bancodangki"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Vui lòng đăng ký tài khoản "
            android:textStyle="bold"
            android:textColor="#9C27B0"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>